<resources>


    <style name="Average">
        <item name="android:layout_weight">1</item>
    </style>

    <style name="Average.Horizontal">
        <item name="android:layout_width">0dp</item>
    </style>

    <style name="Average.Vertical">
        <item name="android:layout_height">0dp</item>
    </style>

    <style name="Average.Horizontal.JournalHeadButton">
        <item name="android:layout_height">match_parent</item>
        <item name="android:padding">68dp</item>
        <item name="android:tint">@color/white</item>
    </style>

    <style name="Average.Vertical.JournalHeadLab">
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@color/textLight</item>
        <item name="android:gravity">center_horizontal|bottom</item>
        <item name="android:textSize">12dp</item>
    </style>

    <style name="EditBarButtonStyle">
        <item name="android:layout_height">@dimen/edit_bar_size</item>
        <item name="android:layout_width">@dimen/edit_bar_size</item>
        <item name="android:padding">12dp</item>
    </style>

    <style name="EditBarButtonStyle.Text">
        <item name="android:gravity">center</item>
        <item name="android:textSize">24dp</item>
    </style>

    <style name="MineItemLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/list_item_size</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@drawable/sel_item_click</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="MineItemHeadImage">
        <item name="android:layout_width">@dimen/list_item_image_size</item>
        <item name="android:layout_height">@dimen/list_item_image_size</item>
    </style>

    <style name="MineItemDescriptionText">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:textColor">@color/textBlack</item>
    </style>

    <style name="MineItemArrowText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawableRight">@drawable/ic_arrow_gray_right</item>
        <item name="android:drawablePadding">4dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="ListItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/list_item_size</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">12dp</item>
    </style>

    <style name="ListItem.LinerLayout">
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="ListItem.TextView">
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/textBlack</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="InputPasswordItem">
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/sel_btn_gray</item>
    </style>

    <style name="InputPasswordTextView" parent="InputPasswordItem">
        <item name="android:gravity">center</item>
        <item name="android:textSize">24dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="InputPasswordRow">
        <item name="android:layout_marginLeft">12dp</item>
        <item name="android:layout_marginRight">12dp</item>
    </style>

    <style name="customToolbar">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
    </style>

    <style name="EditorBarStyle">
        <item name="android:layout_height">@dimen/edit_bar_size</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:drawablePadding">12dp</item>
        <item name="android:background">@null</item>
        <item name="android:lines">1</item>
    </style>

    <style name="EditorBarStyle.white">
        <item name="android:background">@color/white</item>
    </style>

    <style name="ToolbarPopupTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:actionMenuTextColor">@color/white</item>
    </style>

</resources>
