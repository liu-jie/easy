<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgGray">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            style="@style/customToolbar"
            app:navigationIcon="@drawable/ic_arrow_back_white"
            app:theme="@style/ToolbarPopupTheme"
            app:title="@string/login"
            app:titleTextColor="@color/white" />

        <EditText
            android:id="@+id/et_account"
            style="@style/EditorBarStyle.white"
            android:layout_marginTop="48dp"
            android:drawableLeft="@drawable/sel_account_gray_primary"
            android:ems="24"
            android:hint="@string/account_or_email"
            android:inputType="text" />

        <EditText
            android:id="@+id/et_password"
            style="@style/EditorBarStyle.white"
            android:drawableLeft="@drawable/sel_password_gray_primary"
            android:hint="@string/password"
            android:inputType="textPassword" />


        <TextView
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="@dimen/edit_bar_size"
            android:layout_marginTop="32dp"
            android:background="@color/white"
            android:gravity="center"
            android:text="@string/login"
            android:textColor="@color/text_dark"
            android:textSize="16sp" />

    </LinearLayout>
</ScrollView>